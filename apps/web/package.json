{
  "name": "@internal-toolkit/web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "typecheck": "prisma generate && tsc --noEmit",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "pretest:e2e": "playwright install chromium",
    "test:e2e": "pnpm db:reset && playwright test tests/smoke.spec.ts tests/health.spec.ts tests/modules.spec.ts",
    "test:full-scan": "pnpm db:reset && playwright test tests/diagnostics/full-scan.spec.ts",
    "test:a11y": "playwright test tests/a11y.spec.ts",
    "test:api": "playwright test tests/api-contracts.spec.ts",
    "lhci": "lhci autorun --config=../../.lighthouserc.json",
    "test:ui": "playwright test --ui",
    "prisma:generate": "prisma generate",
    "db:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "node scripts/migrate-deploy.mjs",
    "setup:integrations": "node scripts/setup-integrations.mjs",
    "db:push": "prisma db push",
    "db:push:dev": "prisma db push",
    "db:migrate:status": "prisma migrate status",
    "prisma:seed": "prisma db seed",
    "db:reset": "node scripts/reset-db.mjs",
    "env:check": "tsx scripts/validate-env.ts",
    "env:setup": "tsx scripts/setup-local-env.ts"
  },
  "dependencies": {
    "@internal-toolkit/shared": "workspace:*",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-virtual": "^3.13.18",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.32.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.34.1",
    "lucide-react": "^0.574.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "papaparse": "^5.5.3",
    "pg": "^8.16.3",
    "prisma": "^7.4.0",
    "qrcode.react": "^4.2.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "recharts": "^3.7.0",
    "tailwind-merge": "^3.4.1",
    "xlsx": "^0.18.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@lhci/cli": "0.14.0",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^22.18.10",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "dotenv": "^17.3.1",
    "eslint": "^9.38.0",
    "eslint-config-next": "16.1.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
