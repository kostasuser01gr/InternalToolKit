# Local default sqlite. Hosted production requires DATABASE_URL and SESSION_SECRET.
# For zero-infra hosted fallback you can set DATABASE_URL to file:./prisma/runtime.sqlite
# (ephemeral runtime copy under /tmp).
DATABASE_URL="file:./dev.db"
# Required (>=16 chars). Used for secure cookie signing.
SESSION_SECRET="replace-with-strong-random-secret"
# Optional alternate secret name compatibility.
# NEXTAUTH_SECRET="replace-with-strong-random-secret"
SESSION_COOKIE_SECURE="0"
NEXT_PUBLIC_API_URL="http://127.0.0.1:8787"
APP_VERSION="1.0.0"

# Assistant provider: keep mock by default for local/dev and zero paid-service dependency.
ASSISTANT_PROVIDER="mock"
OPENAI_API_KEY=""
NEXT_PUBLIC_FEATURE_COMMAND_PALETTE="1"
NEXT_PUBLIC_FEATURE_COMPONENTS_SHOWROOM="1"
NEXT_PUBLIC_FEATURE_REPORTS_PDF="1"
NEXT_PUBLIC_FEATURE_VOICE_INPUT="0"
NEXT_PUBLIC_FEATURE_WINDOW_CONTROLS_OVERLAY="0"
