# Supabase (or any Postgres) pooled connection string.
# Vercel Preview + Production: REQUIRED.
# In Vercel, paste the raw URI value only (no DATABASE_URL= prefix, no wrapping quotes).
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:6543/postgres?pgbouncer=true&connection_limit=1&sslmode=require"
# Supabase direct connection string for migrations.
# Runtime uses this as automatic fallback when pooled DATABASE_URL is unreachable.
# Vercel Preview + Production: REQUIRED.
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres?sslmode=require"
# Required (>=32 chars). Vercel Preview + Production.
SESSION_SECRET="replace-with-strong-random-secret-min-32-chars"
# Optional alternate secret name compatibility.
# NEXTAUTH_SECRET="replace-with-strong-random-secret-min-32-chars"
SESSION_COOKIE_SECURE="0"
NEXT_PUBLIC_API_URL="http://127.0.0.1:8787"
APP_VERSION="1.0.0"
FREE_ONLY_MODE="1"
AI_PROVIDER_MODE="cloud_free"
AI_ALLOW_PAID="0"

# Optional local-only legacy flag. Leave "0" for normal Postgres development.
# For local sqlite development only, replace DATABASE_URL with:
# DATABASE_URL="file:./prisma/runtime.sqlite"
# and set ALLOW_SQLITE_DEV="1".
ALLOW_SQLITE_DEV="0"

# Free-only policy: do not set paid provider keys in this project.
# OPENAI_API_KEY=""
# ANTHROPIC_API_KEY=""
# GOOGLE_API_KEY=""
# COHERE_API_KEY=""
NEXT_PUBLIC_FEATURE_COMMAND_PALETTE="1"
NEXT_PUBLIC_FEATURE_UNIFIED_CHAT="1"
NEXT_PUBLIC_FEATURE_CUSTOM_SHORTCUTS="1"
NEXT_PUBLIC_FEATURE_CLOUD_AI_GATEWAY="1"
NEXT_PUBLIC_FEATURE_COMPONENTS_SHOWROOM="1"
NEXT_PUBLIC_FEATURE_REPORTS_PDF="1"
NEXT_PUBLIC_FEATURE_VOICE_INPUT="0"
NEXT_PUBLIC_FEATURE_WINDOW_CONTROLS_OVERLAY="0"

