# ─── Database (Supabase Postgres) ───────────────────────────────────
# Pooled connection (pgBouncer, port 6543). Required for runtime.
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-eu-west-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Direct connection (port 5432). Required for migrations.
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-eu-west-1.pooler.supabase.com:5432/postgres"

# ─── Auth / Session ────────────────────────────────────────────────
# Random secret, >=32 chars. Generate: openssl rand -hex 32
SESSION_SECRET=""
SESSION_COOKIE_SECURE="0"

# ─── Cron / API secrets ────────────────────────────────────────────
# Protects cron endpoints (/api/cron/*). Required in production.
CRON_SECRET=""

# ─── App settings ──────────────────────────────────────────────────
NEXT_PUBLIC_API_URL="http://127.0.0.1:8787"
APP_VERSION="1.0.0"
FREE_ONLY_MODE="1"
AI_PROVIDER_MODE="cloud_free"
AI_ALLOW_PAID="0"
ALLOW_SQLITE_DEV="0"

# ─── Feature flags ─────────────────────────────────────────────────
NEXT_PUBLIC_FEATURE_COMMAND_PALETTE="1"
NEXT_PUBLIC_FEATURE_UNIFIED_CHAT="1"
NEXT_PUBLIC_FEATURE_CUSTOM_SHORTCUTS="1"
NEXT_PUBLIC_FEATURE_CLOUD_AI_GATEWAY="1"
NEXT_PUBLIC_FEATURE_COMPONENTS_SHOWROOM="1"
NEXT_PUBLIC_FEATURE_REPORTS_PDF="1"
NEXT_PUBLIC_FEATURE_VOICE_INPUT="0"
NEXT_PUBLIC_FEATURE_WINDOW_CONTROLS_OVERLAY="0"

