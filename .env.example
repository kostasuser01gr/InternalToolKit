# InternalToolKit — Environment Variables
# Copy this file to .env.local and fill in the values.

# ── Database ──
DATABASE_URL=postgresql://user:password@localhost:5432/internaltoolkit
DIRECT_URL=postgresql://user:password@localhost:5432/internaltoolkit

# ── Auth ──
SESSION_SECRET=your-session-secret-min-32-chars

# ── Kiosk ──
KIOSK_TOKEN=your-kiosk-secret-token
KIOSK_STATION_ID=default

# ── Feature Flags (all default to true unless noted) ──
NEXT_PUBLIC_FEATURE_COMMAND_PALETTE=true
NEXT_PUBLIC_FEATURE_COMPONENTS_SHOWROOM=true
NEXT_PUBLIC_FEATURE_REPORTS_PDF=true
NEXT_PUBLIC_FEATURE_VOICE_INPUT=false
NEXT_PUBLIC_FEATURE_UNIFIED_CHAT=true
NEXT_PUBLIC_FEATURE_CUSTOM_SHORTCUTS=true
NEXT_PUBLIC_FEATURE_CLOUD_AI_GATEWAY=true
NEXT_PUBLIC_FEATURE_WINDOW_CONTROLS_OVERLAY=false

# New feature flags (Phase 7)
NEXT_PUBLIC_FEATURE_KIOSK_PRESETS=true
NEXT_PUBLIC_FEATURE_OFFLINE_QUEUE=true
NEXT_PUBLIC_FEATURE_FLEET_QC_STEP=true
NEXT_PUBLIC_FEATURE_FLEET_SLA_ALERTS=true
NEXT_PUBLIC_FEATURE_SHIFT_PUBLISH_LOCK=true
NEXT_PUBLIC_FEATURE_CHAT_ENTITY_THREADS=true
NEXT_PUBLIC_FEATURE_COORDINATOR_DASHBOARD=true
